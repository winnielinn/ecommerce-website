<div class="row m-5">
  <div class="col-md-6">
    <img class="img-responsive center-block mb-5 d-flex" src="{{product.image}}" style="width: 500px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;"/>
  </div>

  {{!-- name/weight/price --}}
  <div class="col-md-6">
    <h1 class="product-title">{{product.name}}</h1>
    <div class="product-box d-flex justify-content-between">
      <span class="product-weight mt-3">400克/盒</span>
      <p class="product-price mt-5" style="color: #FF5151;">$ {{product.price}}</p>
    </div>

    {{!-- like-feature --}}

    <p class="product-description mt-5 text-secondary" style="white-space: break-spaces;">{{product.description}}</p>
  </div>
</div>