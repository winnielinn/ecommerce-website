<div class="row m-5">
  <div class="container d-flex justify-content-center">
    <div class="card" style="width: 30rem;height: 20rem;">
      <div class="card-body p-5">
        <h2 class="text-center mt-2 mb-5">填寫 Email 取得驗證碼</h2>
        <form class="user-login-form" action="/users/forgetPassword" method="POST">
          <div class="form-row mb-3">
            <div class="mb-5 row">
              <label
                for="email"
                class="col-sm-2 col-form-label"
              >Email</label>
              <div class="col-sm-10">
                <input
                  class="form-control"
                  id="email"
                  type="text"
                  name="email"
                  class="form-control"
                  placeholder="電子信箱"
                  required
                />
              </div>
            </div>
          </div>
          <div class="form-row d-flex flex-column align-item-center">
            <button
              class="btn btn-primary btn-block"
              style="background-color: #FF7575; border-color:#FF7575"
              type="submit"
            >送出</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>